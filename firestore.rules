rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Allow users to read their own data, or staff/admin to read any user
      allow read: if request.auth != null && 
        (request.auth.uid == userId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin']);
      
      // Allow users to create their own document when registering
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to update their own data, or staff/admin to update any user
      allow update: if request.auth != null && 
        (request.auth.uid == userId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin']);
      
      // Only staff/admin can delete users
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin'];
    }
    
    // Children collection
    match /children/{childId} {
      // Allow parents to read their own children, or staff/admin to read any child
      allow read: if request.auth != null && 
        (resource.data.parentIds.hasAny([request.auth.uid]) || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin']);
      
      // Allow parents to create children and link themselves automatically
      allow create: if request.auth != null && 
        (request.data.parentIds.hasAny([request.auth.uid]) ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin']);
      
      // Allow parents to update/delete their own children, or staff/admin to update/delete any child
      allow update, delete: if request.auth != null && 
        (resource.data.parentIds.hasAny([request.auth.uid]) || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin']);
    }
    
    // Check-in/out logs
    match /checkInOutLogs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }
    
    // Calendar events
    match /calendarEvents/{eventId} {
      allow read: if request.auth != null;
      // Allow all authenticated users to create events
      allow create: if request.auth != null;
      // Only staff/admin can update or delete events
      allow update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin'];
    }
  }
}

